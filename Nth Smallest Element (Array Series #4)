void bubble_sort(int arr[], int n)
{
    for (int i = 0; i < n - 1; ++i) 
    {
        for (int j = 0; j < n - i - 1; ++j)
        {
            if (arr[j] > arr[j + 1]) 
            {
                int t = arr[j];
                arr[j] = arr[j + 1];
                arr[j + 1] = t;
            }
        }
    }
}

int nth_smallest(const int arr[/* count */], int count, int n)
{
  
  bubble_sort(arr,count);
  
  return arr[n-1]; // Do your magic!
}
